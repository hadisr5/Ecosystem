@model Seventy.ViewModel.EDU.Course.CourseViewModel
@using hc = Seventy.Web.Areas.Edu.Course.CourseController
@using System.Threading
@using Seventy.Web.Areas.Edu.Course
@{
    ViewBag.Title = "ثبت دوره آموزشی";
    Layout = "~/Areas/Edu/Shared/_Layout.cshtml";
}

@section Styles{
    <link rel="stylesheet" type="text/css" href="/app-assets/vendors/css/tables/datatable/datatables.min.css">
    <link rel="stylesheet" type="text/css" href="/app-assets/css-rtl/plugins/pickers/persianDatepicker-master/css/persianDatepicker-default.css" />
}

@inject CourseController hc
@{


    var categories = await hc.GetAllCourceCategory(new CancellationToken());
    var primaryCategories = categories.GroupBy(x => x.PrimaryCat).Select(g => g.OrderBy(p => p.PrimaryCat).ToList()).ToList();

}

<section>
    @if (TempData.ContainsKey("success"))
    {
        <div class="haftad-alert" type="success" title="@TempData["success"]"></div>
    }
    @if (TempData.ContainsKey("err"))
    {
        <div class="haftad-alert" type="danger" title="@TempData["err"]"></div>
    }
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">ثبت دوره آموزشی جدید</h4>
                    <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                    <div class="heading-elements">
                        <ul class="list-inline mb-0">
                            <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                            <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                        </ul>
                    </div>
                </div>

                <div class="card-content collapse show">
                    <div class="card-body card-dashboard">

                        <form id="frm" asp-area="Edu" asp-controller="Course" asp-action="AddCourse" method="post" enctype="multipart/form-data">

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="col-md-3" asp-for="CourseType">
                                        </label>

                                        <div class="col-md-9">
                                            <select asp-for="CourseType" class="form-control select2" placeholder="@Html.DisplayNameFor(q=>q.CourseType)">
                                                <option>بلند مدت</option>
                                                <option>تک مهارت</option>
                                            </select>
                                            <span asp-validation-for="CourseType" class="danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="col-md-3" asp-for="RequiredDocuments">
                                        </label>
                                        <div class="col-md-9">
                                            @*<textarea class="form-control " asp-for="RequiredDocuments" placeholder="@Html.DisplayNameFor(q=>q.RequiredDocuments)"></textarea>*@
                                            <select asp-for="RequiredDocuments" class="select2 js-example-events2 form-control" multiple="multiple" name="RequiredDocumentsList">
                                                <optgroup label="مدارک گروه 1">
                                                    <option value="M1">مدرک 1</option>
                                                    <option value="M2">مدرک 2</option>
                                                </optgroup>
                                                <optgroup label="مدرک گروه 2">
                                                    <option value="M3">مدرک 3</option>
                                                    <option value="M4">مدرک 4</option>
                                                    <option value="M5">مدرک 5</option>
                                                    <option value="M6">مدرک 6</option>
                                                </optgroup>
                                            </select>
                                            @*<span asp-validation-for="RequiredDocuments" class="danger"></span>*@
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="col-md-3 label-control" asp-for="Title">
                                        </label>
                                        <div class="col-md-9">
                                            <input class="form-control" asp-for="Title" placeholder="@Html.DisplayNameFor(q=>q.Title)" required>
                                            <span asp-validation-for="Title" class="danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="col-md-3 label-control" asp-for="CategoryID">@Html.DisplayNameFor(q => q.CategoryID)</label>
                                        <span asp-validation-for="CategoryID" class="danger"></span>
                                        <div class="col-md-9">
                                            <select asp-for="CategoryID" class="form-control  select2" placeholder="@Html.DisplayNameFor(q=>q.CategoryID)">
                                                @foreach (var primary in primaryCategories)
                                                {
                                                    <optgroup label="@primary.FirstOrDefault().PrimaryCat">
                                                        @foreach (var item in primary)
                                                        {
                                                            <option value="@item.ID">@item.SecondaryCat</option>
                                                        }
                                                    </optgroup>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="col-md-3 label-control">
                                            @Html.DisplayNameFor(q => q.Duration)
                                        </label>

                                        <div class="col-md-9">
                                            <input class="form-control" asp-for="Duration" placeholder="روز" required>
                                            <span asp-validation-for="Duration" class="danger"></span>
                                        </div>
                                    </div>

                                </div>

                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="col-md-3 label-control" asp-for="Price">
                                            @Html.DisplayNameFor(q => q.Price)
                                        </label>

                                        <div class="col-md-9">
                                            <input class="form-control " type="text" data-type='currency' asp-for="Price" placeholder="تومان" required>
                                            <span asp-validation-for="Price" class="danger"></span>
                                        </div>
                                    </div>
                                </div>

                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="col-md-3 label-control" asp-for="PublishState">
                                        </label>

                                        <div class="col-md-9">
                                            <select asp-for="PublishState" class="form-control select2" placeholder="@Html.DisplayNameFor(q=>q.PublishState)">
                                                <option>در حال انتشار</option>
                                                <option>تکمیل</option>
                                            </select>
                                            <span asp-validation-for="PublishState" class="danger"></span>
                                        </div>
                                    </div>

                                </div>

                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="col-md-3 label-control" asp-for="Achievements">
                                            @Html.DisplayNameFor(q => q.Achievements)
                                        </label>
                                        <div class="col-md-9">
                                            <textarea class="form-control " asp-for="Achievements" placeholder="@Html.DisplayNameFor(q=>q.Achievements)"></textarea>
                                            <span asp-validation-for="Achievements" class="danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <div class="col-sm-10 offset-3">
                                            <button type="submit" class="btn btn-primary" onclick="customSubmit()">ثبت</button>
                                            <button type="reset" class="btn btn-danger">انصراف</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <input type="hidden" name="ID" id="ID" value="@ViewBag.ID" />
                            <input type="hidden" name="RequiredDocumentsList" id="RequiredDocumentsList" value="@ViewBag.RequiredDocumentsList" />


                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>



