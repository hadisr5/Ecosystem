@model Seventy.ViewModel.EDU.Course.CourseRegistrationEditModel
@inject IUnitOfWork uow

@{
    ViewBag.Title = " ثبت نام در دوره آموزشی";
    Layout = "~/Areas/Edu/Shared/_Layout.cshtml";
}
@section Styles{
    <link rel="stylesheet" type="text/css" href="/app-assets/vendors/css/forms/selects/select2.min.css">
    <link rel="stylesheet" type="text/css" href="/app-assets/vendors/css/tables/datatable/datatables.min.css">
}
<section>
    @if (TempData.ContainsKey("success"))
    {
        <div class="haftad-alert" type="success" title="@TempData["success"]"></div>
    }
    @if (TempData.ContainsKey("err"))
    {
        <div class="haftad-alert" type="danger" title="@TempData["err"]"></div>
    }
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">@ViewBag.Title</h4>
                    <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                    <div class="heading-elements">
                        <ul class="list-inline mb-0">
                            <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                            <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                        </ul>
                    </div>
                </div>

                <div class="card-content collapse show">
                    <div class="card-body card-dashboard">
                        <form asp-area="Edu" asp-controller="CourseRegistration" asp-action="Index" method="post">
                            <div class="form-group">
                                <div asp-validation-summary="All" class="text-danger"></div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="col-md-4 label-control" asp-for="UserID"></label>

                                        <div class="col-md-8">
                                            <select asp-for="UserID" class="form-control select2" required>
                                                <option disabled selected>فراگیر</option>
                                                @foreach (var item in uow.UserProfiles.TableNoTracking)
                                                {
                                                    <option value="@item.UserID">@item.FirstName @item.LastName</option>
                                                }
                                            </select>
                                            <span asp-validation-for="UserID"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="col-md-4 label-control" asp-for="CourseID"></label>

                                        <div class="col-md-8">
                                            <select asp-for="CourseID" class="form-control select2" required>
                                                <option disabled selected>نام دوره</option>
                                                @foreach (var item in uow.Course.TableNoTracking)
                                                {
                                                    <option value="@item.ID">@item.Title</option>
                                                }
                                            </select>
                                            <span asp-validation-for="CourseID"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="col-md-4 label-control" asp-for="CourseGroupID"></label>

                                        <div class="col-md-8">
                                            <select asp-for="CourseGroupID" class="form-control select2" required>
                                                <option disabled selected>نام گروه</option>
                                                @foreach (var item in uow.CourseGroups.TableNoTracking)
                                                {
                                                    <option value="@item.ID">@item.Title</option>
                                                }
                                            </select>
                                            <span asp-validation-for="CourseGroupID"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="col-md-4" asp-for="HozoriState">
                                        </label>

                                        <div class="col-md-8">
                                            <select asp-for="HozoriState" class="form-control select2">
                                                <option disabled selected>انتخاب کنید</option>
                                                <option value="حضوری">حضوری</option>
                                                <option value="آنلاین">آنلاین</option>
                                            </select>
                                            <span asp-validation-for="HozoriState" class="danger"></span>
                                        </div>

                                    </div>
                                </div>




                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="col-md-4 label-control" asp-for="CertificateType"></label>

                                        <div class="col-md-8">
                                            <select asp-for="CertificateType" class="form-control select2" required>
                                                <option disabled selected>نام گواهینامه</option>
                                                @foreach (var item in uow.Certificate.TableNoTracking)
                                                {
                                                    <option value="@item.ID">@item.Title</option>
                                                }
                                            </select>
                                            <span asp-validation-for="CertificateType"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="col-md-4 label-control" asp-for="CateringPackId"></label>

                                        <div class="col-md-8">
                                            <select asp-for="CateringPackId" class="form-control select2" required>
                                                <option disabled selected>نام بسته</option>
                                                @foreach (var item in uow.CateringPackage.TableNoTracking)
                                                {
                                                    <option value="@item.ID">@item.Title</option>
                                                }
                                            </select>
                                            <span asp-validation-for="CateringPackId"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="col-md-4 label-control" asp-for="TermID"></label>

                                        <div class="col-md-8">
                                            <select asp-for="TermID" class="form-control select2" required>
                                                <option disabled selected>دوره آموزشی</option>
                                                @foreach (var item in uow.Term.TableNoTracking)
                                                {
                                                    <option value="@item.ID">@item.Title</option>
                                                }
                                            </select>
                                            <span asp-validation-for="TermID"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="col-md-4" asp-for="DocumentsState">
                                        </label>
                                        <div class="col-md-8">
                                            @*<textarea class="form-control " asp-for="RequiredDocuments" placeholder="@Html.DisplayNameFor(q=>q.RequiredDocuments)"></textarea>*@
                                            <select asp-for="DocumentsState" class="select2 form-control" multiple="multiple" name="DocumentsState">
                                                <optgroup label="مدارک گروه 1">
                                                    <option value="M1">مدرک 1</option>
                                                    <option value="M2">مدرک 2</option>
                                                </optgroup>
                                                <optgroup label="مدرک گروه 2">
                                                    <option value="M3">مدرک 3</option>
                                                    <option value="M4">مدرک 4</option>
                                                    <option value="M5">مدرک 5</option>
                                                    <option value="M6">مدرک 6</option>
                                                </optgroup>
                                            </select>
                                            @*<span asp-validation-for="RequiredDocuments" class="danger"></span>*@
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="col-md-4 label-control">جمع دوره</label>

                                        <div class="col-md-8">
                                            <input class="form-control" disabled id="price" />
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6"></div>
                                <input type="hidden" asp-for="ID" />
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="col-md-4 label-control"></label>

                                        <div class="col-md-8">
                                            <button type="submit" class="btn btn-primary">ثبت</button>
                                            <button type="reset" class="btn btn-danger">انصراف</button>
                                        </div>
                                    </div>
                                </div>
                                 
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@{
    await Html.RenderPartialAsync("~/Areas/Edu/Shared/PartialLoading.cshtml");
}
<section id="List"></section>

@section Scripts{
    <script src="/app-assets/vendors/js/tables/datatable/datatables.min.js" type="text/javascript"></script>
    <script src="/app-assets/vendors/js/forms/select/select2.full.min.js" type="text/javascript"></script>
    <script src="/app-assets/js/scripts/forms/select/form-select2.min.js" type="text/javascript"></script>
    <script src="/app-assets/vendors/js/pagination/jquery.twbsPagination.min.js" type="text/javascript"></script>
    <script src="/app-assets/js/scripts/pagination/pagination.js" type="text/javascript"></script>

    <script>
        $('#CourseID').change(function () {
            $.ajax({
                type: "get",
                url: "/Edu/CourseRegistration/RequiredDocumentsList", 
                data: { 
                    courseID: $("#CourseID").val(), 
                },
                success: function (response) {

                    $('#DocumentsState').val(response);

                },
                error: function (response) {

                    alert(response);

                }
            });
      
        });
        $('#CourseID, #CertificateType, #CateringPackId').change(function () {
            $('#price').text('');
            var courseID = $("#CourseID").val();
            var certificateType = $("#CertificateType").val();
            var cateringPackId = $("#CateringPackId").val();
            setPrice(courseID, certificateType, cateringPackId);
        });
        function setPrice(courseID, certificateType, cateringPackId) {
            $.ajax({
                type: "get",
                url: "/Edu/CourseRegistration/PriceSum",
                data: {
                    cateringPackId: cateringPackId,
                    courseID: courseID,
                    certificateType: certificateType
                },
                success: function (response) {

                    $('#price').val(response);

                }
            });
        }
        var currentPage = 1;
        var totalPage = 0;
        $(document).ready(function () {
            LoadPage(currentPage);
        });

        function LoadPage(id) {
            var p = $("#PageBtn_" + id);
            p.removeClass("hidden");

            $('#List').load("/Edu/CourseRegistration/List", { page: id },
                function (responseTxt, statusTxt, xhr) {
                    $(".waiting").hide();
                    $("#configuration").show();

                    if (statusTxt === "success") {
                        totalPage = parseInt($("#TotalPage").val());
                        p.addClass("hidden");
                    }
                });
        }


        function NextPage() {
            if (currentPage < totalPage) {
                currentPage += 1;
                LoadPage(currentPage);
            }
        }

        function PrevPage() {
            if (currentPage > 1) {
                currentPage -= 1;
                LoadPage(currentPage);
            }
        }
    </script>
}