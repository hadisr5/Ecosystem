                cancelButtonText: 'منصرف شدم'
            }).then((result) => {
                if (result.value) {
                    doDelete(id);
                }
            });
        }

        function doDelete(id) {
            $.ajax({
                type: "POST",
                url: "/Edu/RemoveTeacherLesson",
                data: {
