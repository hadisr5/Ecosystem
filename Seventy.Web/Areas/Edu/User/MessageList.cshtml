@section Styles{
    <link rel="stylesheet" type="text/css" href="/app-assets/vendors/css/tables/datatable/datatables.min.css">
}
<section id="configuration">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">لیست پیام ها</h4>
                    <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                </div>
                <div class="card-content collapse show">
                    <div class="card-body card-dashboard">
                        <p class="card-text">شما میتوانید پیام های دریافتی خود را در این صفحه مشاهده کنید</p>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered zero-configuration">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>موضوع</th>
                                        <th>کد ارسال کننده</th>
                                        <th>توضیحات</th>
                                        <th>تاریخ ارسال</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        foreach (Seventy.DomainClass.Core.Messages item in Model)
                                        {
                                            <tr>
                                                <td>@item.ID</td>
                                                <td>@item.MsgTitle</td>
                                                <td>@item.SenderUserID</td>
                                                <td>@item.Description</td>
                                                <td class="ltr">@Seventy.Service.Core.Users.Helper.GetPersianDate(item.RegDate)</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>#</th>
                                        <th>موضوع</th>
                                        <th>کد ارسال کننده</th>
                                        <th>توضیحات</th>
                                        <th>تاریخ ارسال</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script src="/app-assets/vendors/js/tables/datatable/datatables.min.js" type="text/javascript"></script>
      @*DatePicket*@
      <script src="/app-assets/css-rtl/plugins/pickers/persianDatepicker-master/js/persianDatepicker.min.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.inputmask/3.1.60/inputmask/jquery.inputmask.js"></script>
 
       <script src="/app-assets/js/datatable-lng.js"></script>
       
 <script>
        $(document).ready(function () {
            $('.zero-configuration').DataTable({
              "searching": false,
              'language': language['language']
            });
        });
    </script>
}