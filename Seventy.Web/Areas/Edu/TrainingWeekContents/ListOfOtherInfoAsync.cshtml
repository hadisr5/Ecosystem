@model Seventy.ViewModel.EDU.Content.ContentOtherViewModel

@if (Model != null)
{
    
    <section>
        <h4 class="card-title text-center">شرح دوره</h4>
        <p class="pt-1 text-center">@Model.CourseName</p>
        <div class="row pt-1">
            <div class="col-md-3"><img src="/app-assets/images/portrait/small/avatar-s-19.png" class="imgR" /></div>
            <div class="col-md-9" style=" align-self: center;">@Model.TeacherName</div>
        </div>
        <div class="pt-1 text-center">
            <img alt="1" src="~/app-assets/images/raty/star-on.png" title="regular">&nbsp;
            <img alt="2" src="~/app-assets/images/raty/star-on.png" title="regular">&nbsp;
            <img alt="3" src="~/app-assets/images/raty/star-on.png" title="regular">&nbsp;
            <img alt="4" src="~/app-assets/images/raty/star-off.png" title="regular">&nbsp;
            <img alt="5" src="~/app-assets/images/raty/star-off.png" title="regular">
            <input name="score" type="hidden" value="3" readonly="">
        </div>
        <div class="row pt-1 text-center" >
            <div class="col-md-6"><a class="btn-sm btn-primary text-nowrap" href="/Edu/Messages?msgType=0&receiverID=@Model.TeacherId" >پیام به استاد</a></div>
            <div class="col-md-6"><a class="btn-sm btn-primary text-nowrap" href="/Edu/TrainingEvalResult/Index?TargetType=1&TargetID=@Model.CourseId">ارزیابی‌دوره</a></div>
        </div>
        <div class="row pt-1 ">
            <div class="col-md-12"><button class="btn-sm btn-danger btn-block mx-0" onclick="window.location='@Url.Action("SpeechLessons", "TrainingWeekContents")'">خروج از کلاس</button></div>
        </div>
    </section>
}
else
{
    <section>
        <h4 class="card-title text-center">شرح دوره</h4>
        <p class="pt-1 text-center">بدون دوره</p>
        <div class="row pt-1">
            <div class="col-md-3"><img src="/app-assets/images/portrait/small/avatar-s-19.png" class="imgR" /></div>
            <div class="col-md-9" style=" align-self: center;">بدون استاد</div>
        </div>
        <div class="pt-1 text-center">
            <img alt="1" src="~/app-assets/images/raty/star-on.png" title="regular">&nbsp;
            <img alt="2" src="~/app-assets/images/raty/star-on.png" title="regular">&nbsp;
            <img alt="3" src="~/app-assets/images/raty/star-on.png" title="regular">&nbsp;
            <img alt="4" src="~/app-assets/images/raty/star-off.png" title="regular">&nbsp;
            <img alt="5" src="~/app-assets/images/raty/star-off.png" title="regular">
            <input name="score" type="hidden" value="3" readonly="">
        </div>
        <div class="row pt-1 text-center">
            <div class="col-md-6"><a class="btn-sm btn-primary" href="/Edu/Messages">پیام به استاد</a></div>
            <div class="col-md-6"><a class="btn-sm btn-primary" href="/Edu/TrainingEvalResult/Index">ازریابی دوره</a></div>
        </div>
        <div class="row pt-1">
            <div class="col-md-12 m-0"><button class="btn-sm btn-info btn-block">خروجی از کلاس</button></div>
        </div>
    </section>
}
