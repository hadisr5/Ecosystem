@model Seventy.ViewModel.EDU.Main.MainTeacherViewModel

@{
	Layout = "_layout";
}

<h1>Edu Area</h1>
@if (ViewBag.success != null)
{
	<div class="haftad-alert" type="success" title="@ViewBag.success"></div>
}
@if (TempData.ContainsKey("success"))
{
	<div class="haftad-alert" type="success" title="@TempData["success"]"></div>
}

<div class="content-wrapper-before"></div>
<div class="content-header row">
</div>
<div class="content-body">

	<div class="row">
		<div class="col-md-12 col-lg-12">
			<div class="card">
				<div class="card-header p-1">
					<h4 class="card-title float-left">اطلاعات</h4>
				</div>
				<div class="card-content collapse show">
					<div class="card-footer text-center p-1">
						<div class="row">
							<div class="col-md-3 col-12 border-right-blue-grey border-right-lighten-5 text-center">
								<p class="blue-grey lighten-2 mb-0">دوره های ثبت نام کرده</p>
								<p class="font-medium-5 text-bold-400">0</p>
							</div>
							<div class="col-md-3 col-12 border-right-blue-grey border-right-lighten-5 text-center">
								<p class="blue-grey lighten-2 mb-0">دوره های در جریان</p>
								<p class="font-medium-5 text-bold-400">0</p>
							</div>
							<div class="col-md-3 col-12 border-right-blue-grey border-right-lighten-5 text-center">
								<p class="blue-grey lighten-2 mb-0">دوره های پایان یافته</p>
								<p class="font-medium-5 text-bold-400">0</p>
							</div>
							<div class="col-md-3 col-12 text-center">
								<p class="blue-grey lighten-2 mb-0">محتوای مطالعه شده</p>
								<p class="font-medium-5 text-bold-400">0</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-lg-12 col-md-12">
			<div class="card">
				<div class="card-header">
					<h4 class="card-title">دوره های ثبت نام کرده</h4>
					<a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
					<div class="heading-elements">
						<ul class="list-inline mb-0">
							<li><button type="button" class="btn btn-glow btn-round btn-bg-gradient-x-red-pink">بیشتر</button></li>
						</ul>
					</div>
				</div>
				<div class="card-content collapse show">
					<div class="card-body p-0 pb-0">
						<div class="row">
							@foreach (var item in Model.LessonsWithExams)
							{
								<div class="col-4">
									<div class="card pull-up">
										<div class="card-header">
											<h4 class="card-title float-left">@item.LessonName</h4><a class="heading-elements-toggle" dideo-checked="true"><i class="la la-ellipsis-v font-medium-3"></i></a>
											<span class="badge badge-pill badge-info float-right m-0">مدت : </span>
										</div>
										<div class="card-content collapse show">
											<div class="card-body pt-0 pb-1">
												<div class="media d-flex">
													<div class="align-self-center">
														<h6 class="text-bold-600 mt-2"> مدرس: <span class="info"></span></h6>
													</div>
													<div class="media-body text-right mt-2">
														<ul class="list-unstyled users-list">
															<li data-toggle="tooltip" data-popup="tooltip-custom" data-original-title="عکس دوره" class="avatar avatar-sm pull-up" style="width: 50px">
																<img class="media-object rounded-circle" src="" alt="Avatar">
															</li>
														</ul>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
							}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>