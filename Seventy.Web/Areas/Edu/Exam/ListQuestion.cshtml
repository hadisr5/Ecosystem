@model Seventy.Data.PagedList<Seventy.ViewModel.EDU.QuestionsViewModel>

@if (Model != null)
    {
    <div class="row">

        <input type="hidden" id="TotalPage" value="@Model.TotalPages" />

        <div class="col-12">
            <h3 class="showTitle d-none"></h3>
            <div class="table-responsive">
                <table class="table table-striped table-bordered zero-configuration">
                    <thead>
                        <tr class="text-center">
                            <th>#</th>
                            <th>@Html.DisplayNameFor(q => q[0].Title)</th>
                            <th>@Html.DisplayNameFor(q => q[0].Barom)</th>
                            <th class="text-center">عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="RowQ_@item.ID" class="text-center">
                                <td>@item.ID</td>
                                <td>@item.Title</td>
                                <td>@item.Barom</td>
                                <td class="text-center">
                                    <button type="button" class="btn-sm btn-danger" onclick="Delete(@item.ID)"><i class="ficon ft-trash-2"></i></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <nav class="mb-3" aria-label="Page navigation">
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" href="javascript:void(0)" onclick="PrevPage2()" aria-label="Previous">
                            <span aria-hidden="true">« قبلی</span>
                            <span class="sr-only">قبلی</span>
                        </a>
                    </li>
                    @for (var i = 1; i <= Model.TotalPages; i++)
                    {

                        <li class="page-item">
                            <div id="pages" class="d-flex">
                                <a class="page-link" href="javascript:void(0)" onclick="LoadPage2(@i)">
                                    @i
                                    <span class="spinner-border spinner-border-sm hidden" role="status" aria-hidden="true" id="PageBtn_@i"></span>
                                </a>
                            </div>
                        </li>

                    }
                    <li class="page-item">
                        <a class="page-link" href="javascript:void(0)" onclick="NextPage2()" aria-label="Next">
                            <span aria-hidden="true">بعدی »</span>
                            <span class="sr-only">بعدی</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
    }
