@model Seventy.Data.PagedList<Seventy.ViewModel.EDU.QuestionsViewModel>
@if (Model != null)
{
    <div class="row">
        <input type="hidden" id="TotalPage" value="@Model.TotalPages" />
        <div class="col-12">
            <h3 class="showTitle d-none"></h3>
            <div class="table-responsive">
                <table class="table table-striped table-bordered zero-configuration">
                    <thead>
                        <tr class="text-center">
                            <th>#</th>
                            <th width="100px">@Html.DisplayNameFor(q => q[0].Title)</th>
                            <th>@Html.DisplayNameFor(q => q[0].MultiOption)</th>
                            <th>@Html.DisplayNameFor(q => q[0].QuestionLevel)</th>
                            <th>@Html.DisplayNameFor(q => q[0].Barom)</th>
                            <th class="text-center">عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="Row_@item.ID" class="text-center">
                                <td>@item.ID</td>
                                <td class="examQuestionTitle">@item.Title</td>

                                @if (item.MultiOption)
                                {
                                    <td>بله</td>
                                }
                                else
                                {
                                    <td>خیر</td>
                                }
                                <td>@item.QuestionLevel</td>
                                <td style="width:50px;">
                                    <input class="form-control" type="text" id="Rowbarom_@item.ID" value="@item.Barom" style="width:100px" />
                                    <input type="hidden" id="hidBarom" value="" />
                                </td>
                                <td class="text-center">
                                    <button type="button" class="btn btn-primary question-button" onclick="ShowTitle('@item.Title')">مشاهده</button>
                                    <button type="button" class="btn btn-info question-button" onclick="AddRowToListSelection('@item.ID','@item.Title')">انتخاب</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <nav class="mb-3" aria-label="Page navigation">
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" href="javascript:void(0)" onclick="PrevPage()" aria-label="Previous">
                            <span aria-hidden="true">« قبلی</span>
                            <span class="sr-only">قبلی</span>
                        </a>
                    </li>
                    @for (var i = 1; i <= Model.TotalPages; i++)
                    {

                        <li class="page-item">
                            <div id="pages" class="d-flex">
                                <a class="page-link" href="javascript:void(0)" onclick="LoadPage(@i)">
                                    @i
                                    <span class="spinner-border spinner-border-sm hidden" role="status" aria-hidden="true" id="PageBtn_@i"></span>
                                </a>
                            </div>
                        </li>

                    }
                    <li class="page-item">
                        <a class="page-link" href="javascript:void(0)" onclick="NextPage()" aria-label="Next">
                            <span aria-hidden="true">بعدی »</span>
                            <span class="sr-only">بعدی</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-12">
            <h3 class="showTitle d-none"></h3>
            <div class="table-responsive">
                <table class="table table-striped table-bordered zero-configuration">
                    <thead>
                        <tr class="text-center">
                            <th>#</th>
                            <th width="100px">@Html.DisplayNameFor(q => q[0].Title)</th>
                            <th>@Html.DisplayNameFor(q => q[0].MultiOption)</th>
                            <th>@Html.DisplayNameFor(q => q[0].QuestionLevel)</th>
                            <th>@Html.DisplayNameFor(q => q[0].Barom)</th>
                            <th class="text-center">عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                      
                    </tbody>
                </table>
            </div>
            <nav class="mb-3" aria-label="Page navigation">
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link" href="javascript:void(0)" onclick="PrevPage()" aria-label="Previous">
                            <span aria-hidden="true">« قبلی</span>
                            <span class="sr-only">قبلی</span>
                        </a>
                    </li>
               
                    <li class="page-item">
                        <a class="page-link" href="javascript:void(0)" onclick="NextPage()" aria-label="Next">
                            <span aria-hidden="true">بعدی »</span>
                            <span class="sr-only">بعدی</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
}