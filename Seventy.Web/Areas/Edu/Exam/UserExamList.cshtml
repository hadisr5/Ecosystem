@using System.Threading
@model Seventy.Data.PagedList<Seventy.ViewModel.EDU.ExamUserViewModel>

<div class="row">
    <input type="hidden" id="TotalPage4" value="@Model.TotalPages" />
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">لیست موارد ثبت شده</h4>
                <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
            </div>
            <div class="card-content collapse show">
                <div class="card-body card-dashboard">
                    <p class="card-text">شما می توانید از جدول زیر اقدام به ویرایش یا حذف اطلاعات کنید</p>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered zero-configuration">
                            <thead>
                                <tr>

                                    <th>@Html.DisplayNameFor(q => q[0].LessonTitle)</th>
                                    <th>@Html.DisplayNameFor(q => q[0].ExamTitle)</th>
                                    <th>@Html.DisplayNameFor(q => q[0].UserNameAndFamily)</th>
                                    <th>@Html.DisplayNameFor(q => q[0].Time)</th>
                                    <th>@Html.DisplayNameFor(q => q[0].StartDate)</th>
                                    <th>@Html.DisplayNameFor(q => q[0].EndDate)</th>
                                    <th>@Html.DisplayNameFor(q => q[0].Result)</th>
                                    <th class="CustomOperate">عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                    <tr id="Row_@item.ID">

                                        <td>@item.LessonTitle</td>

                                        <td>@item.ExamTitle</td>
                                        <td>@item.UserNameAndFamily</td>
                                        <td>@item.Exam.Time</td>
                                        <td>@item.StartDate</td>
                                        <td>@item.EndDate</td>
                                        <td>
                                            @if (@item.Result.ToString() != "")
                                            {
                                                @item.Result
                                            }
                                            else
                                            {
                                                <span>عدم شرکت در آزمون</span>
                                            }

                                        </td>

                                        <td style="text-align: center;">
                                            @if (item.Result != null)
                                            {
                                                <button type="button" class="btn-sm btn-warning" onclick="document.location.href = '#?id='+@item.ExamID">مشاهده</button>
                                                <button type="button" class="btn-sm btn-danger" onclick="document.location.href = '#?id='+@item.ExamID">تصحیح</button>

                                            }
                                            else
                                            {
                                                @if (item.Exam.CanStart)
                                                {
                                                    <button type="button" class="btn-sm btn-warning" onclick="document.location.href = '/Edu/startexam?examid='+@item.ExamID">شرکت درآزمون</button>
                                                }
                                                else
                                                {
                                                    <span>خارج از محدوده زمانی آزمون</span>
                                                }
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <nav class="mb-3" aria-label="Page navigation">
                        <ul class="pagination">
                            <li class="page-item">
                                <a class="page-link" href="javascript:void(0)" onclick="PrevPage4()" aria-label="Previous">
                                    <span aria-hidden="true">« قبلی</span>
                                    <span class="sr-only">قبلی</span>
                                </a>
                            </li>
                            @for (var i = 1; i <= Model.TotalPages; i++)
                            {
                                <div id="pages" class="d-flex">
                                    <li class="page-item">
                                        <a class="page-link" href="javascript:void(0)" onclick="LoadPage4(@i)">
                                            @i
                                            <span class="spinner-border spinner-border-sm hidden" role="status" aria-hidden="true" id="PageBtn4_@i"></span>
                                        </a>
                                    </li>
                                </div>
                            }
                            <li class="page-item">
                                <a class="page-link" href="javascript:void(0)" onclick="NextPage4()" aria-label="Next">
                                    <span aria-hidden="true">بعدی »</span>
                                    <span class="sr-only">بعدی</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>