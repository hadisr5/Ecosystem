@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="main-menu menu-fixed menu-light menu-accordion    menu-shadow " data-scroll-to-active="true" data-img="/app-assets/images/backgrounds/02.jpg">
