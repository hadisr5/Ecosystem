    <!--End: Common Js-->

    <script>
        loadNotifs()
        function loadNotifs() {
            $("#UnreadNotif").hide();
            $(".ft-bell").removeClass("bell-shake");
            $.ajax({
                type: "GET",
                url: "/getNotifications",
                data: {},
                cache: false,
                success: function (data) {
                    if (data.length > 0) {
                        $("#UnreadNotif").show();
                        $(".ft-bell").addClass("bell-shake");
                        $("#notifSection").html(data);
                    }
                }
            });
        }
    </script>

